---
const { house }: { house: House } = Astro.props ?? { house: {} as House };

import DeleteButton from "../components/deleteButton.jsx";
import type { House } from "../model/house";
---

<article class="p-4 bg-primary-600 m-5">
  <a href={`/house/${house.id}`} class="justify-center items-center">
    <img src={house.img} alt="" class="cover w-80 aspect-video object-cover" />
    <div class="pt-2">
      <h1 class="text-2xl font-semibold">{house.title}</h2>
      <p class="text-gray-600">{house.address}</p>
      <p class="font-bold text-lg text-green-600">
        €{house.price.toLocaleString()}
      </p>
      <p class="text-sm mt-2">{house.description}</p>
      <p class="text-sm mt-2">Baños: {house.bedrooms}</p>
      <p class="text-sm mt-2">Baños: {house.bathrooms}</p>
    </div>
  </a>
  <!-- <DeleteButton id={house.id} client:load /> -->
</article>
