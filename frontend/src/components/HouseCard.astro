---
const { house }: { house: House } = {
  house: {
    id: 0,
    title: "",
    address: "",
    price: 0,
    description: "",
    bedrooms: 0,
    bathrooms: 0,
    total_area: 0,
    living_area: 0,
    garage: false,
    terrace: false,
    active: false,
    rentable: false,
    construction_year: 0,
    images: []
  },
  ...Astro.props,
};

import DeleteButton from "../components/deleteButton.jsx";
import type { House } from "../model/house";
import type { HouseImage } from "../model/image";

const houseImages: HouseImage[] = house.images.map((item) => {
  return item;
});
---

<article class="p-4 bg-primary-600 m-5">
  <a href={`/house/${house.id}`} class="justify-center items-center">
    {house.images && house.images.length > 0 && (
    <img
      src={houseImages[0].url}
      alt=""
      class="cover w-80 aspect-video object-cover"
    />
    )}
    <div class="pt-2">
      <h1 class="text-2xl font-semibold">{house.title}</h1>
      <p class="text-gray-600">{house.address}</p>
      <p class="font-bold text-lg text-green-600">
        €{house.price.toLocaleString()}
      </p>
      <p class="text-sm mt-2">{house.description}</p>
      <p class="text-sm mt-2">Baños: {house.bedrooms}</p>
      <p class="text-sm mt-2">Baños: {house.bathrooms}</p>
    </div>
  </a>
  <DeleteButton id={house.id} client:load />
</article>
